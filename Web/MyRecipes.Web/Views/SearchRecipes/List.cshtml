@model MyRecipes.Web.ViewModels.SearchRecipes.ListViewModel
@{
	ViewData["Title"] = "Search result";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	@foreach (var recipe in this.Model.Recipes)
	{
		<div class="card col-md-3">
			<img class="card-img-top" src="@recipe.ImageUrl" alt="Image of @recipe.Name">
			<div class="card-body">
				<h5 class="card-title">@recipe.Name</h5>
				<p class="card-text">@recipe.CategoryName</p>
				<a asp-controller="Recipes" asp-action="ById" asp-route-id="@recipe.Id" class="btn btn-primary">Go to recipe</a>
			</div>
		</div>
	}
</div>
